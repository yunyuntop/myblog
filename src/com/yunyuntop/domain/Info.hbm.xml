<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!-- 配置类和表结构的映射 -->
	<class name="com.yunyuntop.domain.Info" table="info">
		<!-- 配置id 见到name属性，JavaBean的属性 见到column属性，是表结构的字段 -->
		<id name="iid" column="iid">
			<!-- 主键的生成策略 -->
			<generator class="uuid" />
		</id>

		
		<property name="messagecount" column="messagecount" />
		<property name="greatecount" column="greatecount" />
		<property name="discusscount" column="discusscount" />		
		
		

	
	</class>

</hibernate-mapping>    